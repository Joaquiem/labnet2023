@model List<Lab.MVC.Models.EmployeeView>

@{
    ViewBag.Title = "Employee";
}

<h1>Soy el index de empleados Xd</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID empleado</th>
            <th scope="col">Nombre empleado</th>
            <th scope="col">Apellido empleado</th>
            <th scope="col"> Borrar</th>
        </tr>
    </thead>
    <tbody></tbody>

    @foreach (var e in Model)
    {
        <tr>
            <th scope="row">@e.ID</th>
            <td>@e.FirstName</td>
            <td>@e.LastName</td>
            <td>@Html.ActionLink("Borrar", "Delete", new { id = e.ID })</td>
        </tr>
    }
</table>
<div>
    @Html.ActionLink("Insertar Nuevo Employee", "Insert")
</div>
